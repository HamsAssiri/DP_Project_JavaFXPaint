<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.canvas.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="AnchorPane" maxHeight="500.0" maxWidth="1000.0" minHeight="500.0" minWidth="1000.0" prefHeight="500.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="paint.controller.FXMLDocumentController">
   <children>
      <Pane fx:id="Before" maxHeight="500.0" maxWidth="1000.0" minHeight="500.0" minWidth="1000.0" prefHeight="500.0" prefWidth="1000.0" style="-fx-background-color: #e9e9e9;">
         <children>
            <ImageView fitHeight="390.0" fitWidth="925.0" layoutX="38.0" layoutY="80.0">
               <image>
                  <Image url="@img.png" />
               </image>
            </ImageView>
            <Button fx:id="StartBtn" layoutX="379.0" layoutY="400.0" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="64.0" prefWidth="237.0" style="-fx-background-color: #46C5E0;" text="Start" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font name="DejaVu Sans Bold" size="30.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Label layoutX="329.0" layoutY="36.0" prefHeight="51.0" prefWidth="342.0" text="Paint Application" textAlignment="CENTER" textFill="#111111">
               <font>
                  <Font name="DejaVu Sans ExtraLight" size="40.0" />
               </font>
            </Label>
         </children>
      </Pane>
      
      <GridPane fx:id="After" maxHeight="500.0" maxWidth="1000.0" minHeight="500.0" minWidth="1000.0" prefHeight="500.0" prefWidth="1000.0" visible="false">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        
        <rowConstraints>
          <!-- Row 0: Top Toolbar (Shape selection, colors, tools) -->
          <RowConstraints maxHeight="50.0" minHeight="50.0" prefHeight="50.0" vgrow="SOMETIMES" />
          
          <!-- Row 1: Canvas Area -->
          <!-- Adjusting canvas row height from 400 to 350 -->
          <RowConstraints maxHeight="350.0" minHeight="350.0" prefHeight="350.0" vgrow="SOMETIMES" />
          
          <!-- Row 2: File Operations (Load, Save, Delete, Undo, Redo, Import) -->
          <RowConstraints maxHeight="50.0" minHeight="50.0" prefHeight="50.0" vgrow="SOMETIMES" />
          
          <!-- Row 3: NEW - Memento Version Management -->
          <RowConstraints maxHeight="50.0" minHeight="50.0" prefHeight="50.0" vgrow="SOMETIMES" />
        </rowConstraints>
        
        <children>
            <!-- ===== ROW 0: Top Toolbar ===== -->
            <HBox alignment="CENTER" maxHeight="50.0" maxWidth="1000.0" minHeight="50.0" minWidth="1000.0" 
                prefHeight="50.0" prefWidth="1000.0" GridPane.rowIndex="0">  <!-- ADDED THIS -->
               <children>
                  <ComboBox fx:id="ShapeBox" HBox.hgrow="ALWAYS" maxHeight="50.0" maxWidth="Infinity" minHeight="50.0" minWidth="80.0" nodeOrientation="LEFT_TO_RIGHT" prefHeight="50.0" prefWidth="165.67" promptText="Shape" style="-fx-background-radius: 0px; -fx-background-color: fcff99;">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </ComboBox>
                  <ColorPicker fx:id="ColorBox" HBox.hgrow="ALWAYS" maxHeight="50.0" maxWidth="Infinity" minHeight="50.0" minWidth="80.0" nodeOrientation="LEFT_TO_RIGHT" prefHeight="50.0" prefWidth="120.0" promptText="Color" style="-fx-background-radius: 0px; -fx-background-color: lightgreen;">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </ColorPicker>
                  <Button fx:id="RecolorBtn" HBox.hgrow="ALWAYS" contentDisplay="CENTER" maxHeight="50.0" maxWidth="Infinity" minHeight="50.0" minWidth="80.0" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="50.0" prefWidth="120.0" style="-fx-background-radius: 0px; -fx-background-color: lightpink;" styleClass="btns" text="Recolor">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
                  <Button fx:id="MoveBtn" HBox.hgrow="ALWAYS" contentDisplay="CENTER" maxHeight="50.0" maxWidth="Infinity" minHeight="50.0" minWidth="80.0" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="50.0" prefWidth="120.0" style="-fx-background-radius: 0px; -fx-background-color: lightblue;" styleClass="btns" text="Move">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
                  <Button fx:id="CopyBtn" HBox.hgrow="ALWAYS" contentDisplay="CENTER" maxHeight="50.0" maxWidth="Infinity" minHeight="50.0" minWidth="80.0" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="50.0" prefWidth="120.0" style="-fx-background-radius: 0px; -fx-background-color: FED18C;" styleClass="btns" text="Copy">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
                  <Button fx:id="ResizeBtn" HBox.hgrow="ALWAYS" contentDisplay="CENTER" maxHeight="50.0" maxWidth="Infinity" minHeight="50.0" minWidth="80.0" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="50.0" prefWidth="120.0" style="-fx-background-color: #e4b9d2; -fx-background-radius: 0px;" styleClass="btns" text="Resize">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
                  <MenuButton fx:id="DecorationBtn" HBox.hgrow="ALWAYS" contentDisplay="CENTER" maxHeight="50.0" maxWidth="Infinity" minHeight="50.0" minWidth="80.0" prefHeight="50.0" prefWidth="120.0" style="-fx-background-radius: 0px; -fx-background-color: #d6f0ff;" text="Decorations">
                     <items>
                        <MenuItem fx:id="ShadowMenuItem" mnemonicParsing="false" onAction="#handleShadowMenu" text="Shadow" />
                        <MenuItem fx:id="BorderMenuItem" mnemonicParsing="false" onAction="#handleBorderMenu" text="Border" />
                     </items>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </MenuButton>

                  <!-- Composite Toggle Button -->
                  <ToggleButton fx:id="GroupToggle"
                    text="Group Mode"
                    maxHeight="50.0" maxWidth="166.67"
                    minHeight="50.0" minWidth="166.67"
                    prefHeight="50.0" prefWidth="166.67"
                    mnemonicParsing="false"
                    onAction="#onGroupToggle"
                    style="-fx-background-radius: 0px; -fx-background-color: #a8d8ea;"
                    styleClass="btns">
                    <cursor>
                      <Cursor fx:constant="HAND"/>
                    </cursor>
                  </ToggleButton> 
               </children>
            </HBox>
            
            <!-- ===== ROW 1: Canvas Area ===== -->
            <GridPane maxHeight="350.0" maxWidth="1000.0" minHeight="350.0" minWidth="1000.0" 
                prefHeight="350.0" prefWidth="1000.0" GridPane.rowIndex="1">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="833.33" minWidth="833.33" prefWidth="833.33" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="166.67" minWidth="166.67" prefWidth="166.67" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints maxHeight="350.0" minHeight="350.0" prefHeight="350.0" vgrow="SOMETIMES" /> <!-- Fixed: 350 not 400 -->
              </rowConstraints>
              
               <children>
                  <ListView fx:id="ShapeList" maxHeight="350.0" maxWidth="166.67" minHeight="350.0" minWidth="166.67" 
                      prefHeight="350.0" prefWidth="166.67" GridPane.columnIndex="1"> <!-- Fixed: 350 not 400 -->
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </ListView>
                  
                  <GridPane maxHeight="350.0" maxWidth="850.0" minHeight="350.0" minWidth="850.0" 
                      prefHeight="350.0" prefWidth="850.0"> <!-- Fixed: 350 not 400 -->
                    <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" maxWidth="833.33" minWidth="833.33" prefWidth="833.33" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints maxHeight="30.0" minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints maxHeight="320.0" minHeight="320.0" prefHeight="320.0" vgrow="SOMETIMES" /> <!-- Fixed: 320 not 370 -->
                    </rowConstraints>
                    
                     <children>
                        <Label fx:id="Message" alignment="CENTER" contentDisplay="CENTER" maxHeight="30.0" maxWidth="833.33" minHeight="30.0" minWidth="833.33" prefHeight="30.0" prefWidth="833.33" text="Pick a shape, then drag below to draw ;)" textAlignment="CENTER">
                           <font>
                              <Font name="Monospaced Regular" size="15.0" />
                           </font>
                        </Label>
                        
                        <Canvas fx:id="CanvasBox" height="320.0" onMousePressed="#startDrag" onMouseReleased="#endDrag" 
                            width="833.33" GridPane.rowIndex="1"> <!-- Fixed: 320 not 370 -->
                           <cursor>
                              <Cursor fx:constant="CROSSHAIR" />
                           </cursor>
                        </Canvas>
                        
                        <Pane fx:id="PathPane" maxHeight="30.0" maxWidth="833.33" minHeight="30.0" minWidth="833.33" 
                            prefHeight="30.0" prefWidth="833.33" visible="false">
                           <children>
                              <TextField fx:id="PathText" alignment="CENTER" layoutX="1.0" layoutY="2.0" maxHeight="30.0" maxWidth="666.66" minHeight="30.0" minWidth="666.66" prefHeight="30.0" prefWidth="666.66" promptText="Enter path of the file here..." style="-fx-background-radius: 0px; -fx-background-color: white;" />
                              <Button fx:id="PathBtn" layoutX="668.0" maxHeight="30.0" maxWidth="166.0" minHeight="30.0" minWidth="166.0" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="30.0" prefWidth="166.0" style="-fx-background-radius: 0px; -fx-background-color: #e3e3e3;" styleClass="btns" text="Submit">
                                 <cursor>
                                    <Cursor fx:constant="HAND" />
                                 </cursor>
                              </Button>
                           </children>
                        </Pane>
                     </children>
                  </GridPane>
               </children>
            </GridPane>
            
            <!-- ===== ROW 2: File Operations ===== -->
            <HBox alignment="CENTER" maxHeight="50.0" maxWidth="1000.0" minHeight="50.0" minWidth="1000.0" 
                prefHeight="50.0" prefWidth="1000.0" GridPane.rowIndex="2">
               <children>
                  <Button fx:id="LoadBtn" maxHeight="50.0" maxWidth="166.67" minHeight="50.0" minWidth="166.67" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="50.0" prefWidth="166.67" style="-fx-background-radius: 0px; -fx-background-color: #fcff99;" styleClass="btns" text="Load">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
                  <Button fx:id="SaveBtn" maxHeight="50.0" maxWidth="166.67" minHeight="50.0" minWidth="166.67" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="50.0" prefWidth="166.67" style="-fx-background-radius: 0px; -fx-background-color: lightgreen;" styleClass="btns" text="Save">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
                  <Button fx:id="DeleteBtn" contentDisplay="CENTER" maxHeight="50.0" maxWidth="166.67" minHeight="50.0" minWidth="166.67" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="50.0" prefWidth="166.67" style="-fx-background-radius: 0px; -fx-background-color: lightpink;" styleClass="btns" text="Delete">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
                  <Button fx:id="UndoBtn" contentDisplay="CENTER" maxHeight="50.0" maxWidth="166.67" minHeight="50.0" minWidth="166.67" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="50.0" prefWidth="166.67" style="-fx-background-radius: 0px; -fx-background-color: lightblue;" styleClass="btns" text="Undo">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
                  <Button fx:id="RedoBtn" contentDisplay="CENTER" maxHeight="50.0" maxWidth="166.67" minHeight="50.0" minWidth="166.67" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="50.0" prefWidth="166.67" style="-fx-background-radius: 0px; -fx-background-color: #FED18C;" styleClass="btns" text="Redo">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
                  <Button fx:id="ImportBtn" contentDisplay="CENTER" maxHeight="50.0" maxWidth="165.67" minHeight="50.0" minWidth="165.67" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="50.0" prefWidth="165.67" style="-fx-background-color: #e4b9d2; -fx-background-radius: 0px;" styleClass="btns" text="Import">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
               </children>
            </HBox>
            
            <!-- ===== ROW 3: Memento Version Management ===== -->
            <HBox alignment="CENTER" spacing="10" maxHeight="50.0" maxWidth="1000.0" minHeight="50.0" minWidth="1000.0" 
                prefHeight="50.0" prefWidth="1000.0" style="-fx-background-color: #f5f5f5;" GridPane.rowIndex="3">

                <Label text="Versions: " style="-fx-font-weight: bold; -fx-padding: 0 5 0 0;" />

                <!-- ComboBox to show version names -->
                <ComboBox fx:id="VersionComboBox" prefWidth="250.0" promptText="Select a version..."
                    style="-fx-background-radius: 0px; -fx-background-color: white;">
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </ComboBox>

                <!-- Save Version Button -->
                <Button fx:id="SaveVersionBtn" text="Save Version" mnemonicParsing="false" 
                    onAction="#handleSaveVersionAction" prefWidth="150.0"
                    style="-fx-background-radius: 0px; -fx-background-color: #9fd8df;">
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </Button>

                <!-- Restore Version Button -->
                <Button fx:id="RestoreVersionBtn" text="Restore" mnemonicParsing="false" 
                    onAction="#handleRestoreVersionAction" prefWidth="100.0"
                    style="-fx-background-radius: 0px; -fx-background-color: #d4a5a5;">
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </Button>

                <!-- Delete Version Button -->
                <Button fx:id="DeleteVersionBtn" text="Delete" mnemonicParsing="false" 
                    onAction="#handleDeleteVersionAction" prefWidth="100.0"
                    style="-fx-background-radius: 0px; -fx-background-color: #ffcccb;">
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </Button>

                <!-- Version Counter -->
                <Label fx:id="VersionCountLabel" text="Versions: 0" 
                    style="-fx-text-fill: #666; -fx-padding: 0 10 0 10;" />
            </HBox>
         </children>
      </GridPane>
   </children>
</AnchorPane>